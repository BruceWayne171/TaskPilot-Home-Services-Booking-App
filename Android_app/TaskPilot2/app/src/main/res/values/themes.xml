<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
    This is the base application theme for your entire app,
    except for the login/register screens which use a gradient.
    -->
    <style name="Theme.TaskPilot" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary Brand Colors -->
        <item name="colorPrimary">@color/brand_blue_primary</item>
        <item name="colorPrimaryVariant">@color/brand_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary Brand Colors -->
        <item name="colorSecondary">@color/brand_accent_teal</item>
        <item name="colorSecondaryVariant">@color/brand_accent_teal</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status Bar Color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Default Background Color -->
        <item name="android:windowBackground">@color/app_background_light</item>

        <!-- Default Text Colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>

        <!-- Style for the RatingBar to use the accent color -->
        <item name="colorAccent">@color/brand_accent_teal</item>
    </style>

    <!-- You can keep the original theme if you want, but the one above will apply -->
    <style name="Theme.TaskPilot.Original" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- ... (original purple/teal colors) ... -->
    </style>
</resources>
